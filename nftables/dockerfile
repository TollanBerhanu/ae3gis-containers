FROM ubuntu:24.04

# Avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install basic packages + nftables
RUN apt-get update && apt-get install -y \
  openssh-server \
  rsyslog \
  net-tools \
  iproute2 \
  iputils-ping \
  nftables \
  procps \
  vim \
  && rm -rf /var/lib/apt/lists/*

# SSH setup: root password + allow root/password login
RUN mkdir /var/run/sshd && \
    echo 'root:root' | chpasswd && \
    sed -i 's/^#\?PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config && \
    sed -i 's/^#\?PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config && \
    sed -i 's/^#\?UsePAM.*/UsePAM no/' /etc/ssh/sshd_config

# Enable IPv4 forwarding
RUN echo 'net.ipv4.ip_forward=1' >> /etc/sysctl.conf

# Add your nftables ruleset
COPY nftables.conf /etc/nftables.conf

# Expose SSH port
EXPOSE 22

# Start services: apply sysctl settings, start rsyslog, load nftables, and run sshd
CMD ["sh", "-c", "sysctl -p && rsyslogd && nft -f /etc/nftables.conf && exec /usr/sbin/sshd -D"]
